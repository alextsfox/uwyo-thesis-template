	urldate = {2023-05-11},
	journal = {Science of The Total Environment},
	author = {Knowles, John F. and Bjarke, Nels R. and Badger, Andrew M. and Berkelhammer, Max and Biederman, Joel A. and Blanken, Peter D. and Bretfeld, Mario and Burns, Sean P. and Ewers, Brent E. and Frank, John M. and Hicke, Jeffrey A. and Lestak, Leanne and Livneh, Ben and Reed, David E. and Scott, Russell L. and Molotch, Noah P.},
	month = jul,
	year = {2023},
	keywords = {Ecohydrology, GLEES, MODIS, Niwot Ridge, Spruce beetle, Water resources},
	pages = {163260},
}

@article{kljun_simple_2015,
