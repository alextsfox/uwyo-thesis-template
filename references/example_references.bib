	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1890/1051-0761\%281999\%29009\%5B0513\%3ACOEOWA\%5D2.0.CO\%3B2},
	keywords = {Pinus taeda, local water balance, sapflux, stand transpiration, water and nutrient supply},
