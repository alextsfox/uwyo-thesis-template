	keywords = {Pinus contorta, Rocky Mountains, Wyoming, Yellowstone National Park, basal area increment, convergence, disturbance, fire ecology, forest production, forests, leaf-area index, stand development, stand production, stand structure, succession},
	pages = {48--61},
}

@article{stewart_modelling_1988,
